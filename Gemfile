source :rubygems

group :tools do
    gem 'cucumber'
    gem 'aruba'

    gem 'rspec'

    gem 'guard-cucumber'
    gem 'guard-rspec'
    gem 'rb-readline'
    gem 'rb-inotify' if RUBY_PLATFORM.downcase.include?("linux")
    gem 'factory_girl'
    gem 'rb-fsevent' if RUBY_PLATFORM.downcase.include?("darwin")
end
